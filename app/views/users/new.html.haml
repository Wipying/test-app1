- provide(:title, 'Sign up')
%h1.text-center Sign up
%p &nbsp;
.row
	.col-md-6.col-md-offset-3
		= form_for @user, role: 'form', html: {class: 'form-horizontal'} do |f|
			= render 'shared/error_messages'
			.form-group
				= f.label :name, class:'control-label col-sm-3'
				.col-sm-9= f.text_field :name, class:'form-control'
			.form-group
				= f.label :email, class:'control-label col-sm-3'
				.col-sm-9= f.text_field :email, class:'form-control'
			.form-group
				= f.label :password, class:'control-label col-sm-3'
				.col-sm-9= f.password_field :password, class:'form-control'
			.form-group
				= f.label :password_confirmation, "Confirmation", class:'control-label col-sm-3'
				.col-sm-9= f.password_field :password_confirmation, class:'form-control'
			.form-group
				.col-sm-offset-3.col-sm-9= f.submit "Create my account", class: 'btn btn-large btn-primary'