%header
	%nav.navbar.navbar-fixed-top.navbar-inverse{role: 'navigation'}
		.navbar-header
			= link_to 'Demo for Sinny Rock App', root_path, {class: 'navbar-brand', id:'logo'}
		.navbar-collapse.collapse.navbar-right
			%ul.nav.navbar-nav
				%li= link_to "Home",		root_path
				%li= link_to "Help",		help_path
				- if !signed_in?
					%li= link_to "Sign in", signin_path
				- else
					%li.dropdown
						%a.dropdown-toggle{href:'#', 'data-toggle'=>'dropdown'}
							Account
							%b.caret
						%ul.dropdown-menu
							%li=link_to 'Profile', user_path(current_user)
							%li=link_to 'Settings', '#'
							%li.divider
							%li=link_to 'Sign out', signout_path, method:'delete'