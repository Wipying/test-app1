- provide(:title, 'Sign in')
%h1.text-center Sign in

.row
	.col-md-6.col-md-offset-3
		= form_for :session, url: sessions_path, html: {class:'form-horizontal'} do |f|
			.form-group
				= f.label :email, class: 'control-label col-md-3'
				.col-md-9= f.text_field :email, class: 'form-control'
			.form-group
				= f.label :password, class: 'control-label col-md-3'
				.col-md-9= f.password_field :password, class: 'form-control'
			.form-group
				.col-md-offset-6= f.submit "Sign in", class: 'btn btn-primary'
		%p.col-md-offset-3
			New user?
			= link_to 'Sign up now!', signup_path